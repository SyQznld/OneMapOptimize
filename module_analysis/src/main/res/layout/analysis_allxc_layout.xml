<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        app:cardCornerRadius="@dimen/size_5dp">
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_allxc_input"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="8"
            android:background="@drawable/edit_bg"
            android:hint="输入名称开始搜索"
            android:paddingLeft="20dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_allxc_fenxi"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:background="@drawable/edit_bg"
            android:text="分析"
            android:textColor="@color/bg_analysis"
            android:textSize="14sp" />

        <TextView
            android:layout_marginLeft="@dimen/dp_4"
            android:id="@+id/tv_allxc_close"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/edit_bg"
            android:text="关闭"
            android:textColor="@color/bg_analysis"
            android:textSize="14sp" />

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/ll_allxc_huijiqu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="12dp"
        android:paddingLeft="12dp">

        <ImageView
            android:id="@+id/iv_huijiqu_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:src="@drawable/ic_row_up" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:text="惠济区"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </LinearLayout>


    <ExpandableListView
        android:id="@+id/elv_allxc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginLeft="18dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_allxc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />


</LinearLayout>